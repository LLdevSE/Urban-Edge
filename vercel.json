{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/server.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "backend/server.js": {
      "maxDuration": 10
    }
  },
  "installCommand": "npm install",
  "buildCommand": "npm run build --workspace=frontend",
  "outputDirectory": "frontend/dist"
}